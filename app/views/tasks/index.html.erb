<div class="page-title">
  <div class="title_left">
    <h3>Tasks Listing</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Tasks List</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Project Name</th>
              <th>Start date</th>
              <th>Completed date</th>
              <th>Status</th>
              <th>Assigned To</th>
            </tr>
          </thead>
          <tbody>
          <% @tasks.each do |task| %>            
            <tr>
              <td><%= best_in_place task, :name, as: :input %>      <i class="fa fa-pencil"></i></td>
              <td><%= task.project.name %> </td>
              <td><%= best_in_place task, :start_date, as: :date, format: 'yy-mm-dd' %>    <i class="fa fa-pencil"></i></td>
              <td><%= best_in_place task, :completed_date, as: :date, format: 'yy-mm-dd' %>    <i class="fa fa-pencil"></i></td>
              <td><%= best_in_place task, :status, :as => :select, :collection => {"unstarted" => "Unstarted", "inprogress" => "InProgress", "completed" => "Completed", "rejected" => "Rejected", "accepted" => "Accepted"} %>     <i class="fa fa-pencil"></i></td>
              <td><%= best_in_place task, :developer_id, :as => :select, :collection => @developers %>     <i class="fa fa-pencil"></i></td>              
            </tr>
          <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'Add New Task', new_task_path %>

