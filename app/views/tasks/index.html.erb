<div class="page-title">
  <div class="title_left">
    <h3>Tasks Listing</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Tasks List</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Project Name</th>
              <th>Start date</th>
              <th>Completed date</th>
              <th>Status</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @tasks.each do |task| %>            
            <tr>
              <td><%= task.name.try(:capitalize) %></td>
              <td><%= task.project.name.try(:capitalize) %></td>
              <td><%= task.start_date %></td>
              <td><%= task.completed_date %></td>
              <td><%= task.status.try(:capitalize)  %></td>
              <td><%= link_to 'Edit', edit_task_path(task) %></td>
              <td><%= link_to 'Manage Team', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>              
            </tr>
          <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'Add New Task', new_task_path %>

