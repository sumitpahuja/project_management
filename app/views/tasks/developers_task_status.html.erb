<div class="page-title">
  <div class="title_left">
    <h3>Developer Work Status</h3>
  </div>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Developer Tasks Status </h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap jambo_table" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Status</th>
              <% @developers.each do |dev| %>
                <th> <%= dev.fullname %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% [:completed, :inprogress, :unstarted].each do |status| %>
              <tr>
                <td> <%= status.capitalize %> </td>
                <% @developers.each do |dev| %>
                  <td>
                    <% @developers_status[dev.id][status].each do |task| %>
                    <br>
                    Todo <%= task.capitalize %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>