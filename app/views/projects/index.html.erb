<div class="page-title">
  <div class="title_left">
    <h3>Projects Listing</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Project List</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Start date</th>
              <th>Completed date</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% @projects.each do |project| %>            
            <tr>
              <td><%= best_in_place project, :name, :as => :input %></td>
              <td><%= project.start_date %></td>
              <td><%= project.completed_date %></td>
              <td><%= best_in_place project, :status, :as => :select, :collection => {"pending" => "pending", "inprogress" => "InProgress", "completed" => "Completed"} %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %> | <%= link_to 'Manage Team', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'Add New project', new_project_path %>

